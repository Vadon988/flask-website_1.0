mysql> USE mysql;
mysql> CREATE USER 'vadon_u'@'localhost' IDENTIFIED BY 'vadon_u';
mysql> GRANT ALL PRIVILEGES ON *.* TO 'vadon-u'@'localhost';
mysql> UPDATE user SET plugin='auth_socket' WHERE User='vadon_u';
mysql> FLUSH PRIVILEGES;
mysql> exit;

